<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.1/xlsx.full.min.js"></script>

<script>
    // URL for the Excel file
    const excelUrl = "https://jsw-my.sharepoint.com/:x:/g/personal/yamuna_m_jsw_in/EYGMswCV_6xDmFjek6VZJpsB4Oj9LPuif3bvTNN62OuGpA?e=dTTjA0";

    // Fetch the Excel file and display it in the table
    async function fetchExcelData() {
        const response = await fetch(excelUrl);
        const arrayBuffer = await response.arrayBuffer();
        const workbook = XLSX.read(arrayBuffer, { type: 'array' });

        // Assuming the first sheet is the one we want to display
        const sheet = workbook.Sheets[workbook.SheetNames[0]];
        
        // Convert sheet to HTML table
        const htmlString = XLSX.utils.sheet_to_html(sheet);
        
        // Insert the generated HTML table into the page
        document.getElementById('excel-table').innerHTML = htmlString;
    }

    // Call the fetchExcelData function when the page loads
    window.onload = function() {
        fetchExcelData();
    }
</script>

